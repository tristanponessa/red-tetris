{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["--inspect-brk", "${workspaceRoot}/app/node_modules/jest/bin/jest.js", "--runInBand", "--coverage", "false"],
            "args": [
                "--runInBand",
                "yarn test ./test/tetris.test.ts",
              ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}